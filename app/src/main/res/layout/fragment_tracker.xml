<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tracker.HealthTrackerFragment">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Tracker"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/device_tracker_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.chip.Chip
        android:id="@+id/device_tracker_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="32dp"
        android:textColor="#faaca8"
        android:textSize="15sp"
        app:chipBackgroundColor="@color/white"
        app:chipStrokeColor="#faaca8"
        app:chipStrokeWidth="1dp"
        android:text="Device Track"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/normal_tracker_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        android:gravity="center_horizontal" />

    <com.google.android.material.chip.Chip
        android:id="@+id/normal_tracker_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:textColor="@color/teal_700"
        android:textSize="15sp"
        app:chipBackgroundColor="@color/white"
        app:chipStrokeColor="@color/teal_700"
        app:chipStrokeWidth="1dp"
        android:text="Normal  Track"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/device_tracker_btn"
        android:gravity="center_horizontal" />
</androidx.constraintlayout.widget.ConstraintLayout>